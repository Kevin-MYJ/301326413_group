<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/stylesheets/admin.css">
  <script src="/js/admin.js"></script>
  <title>Welcome</title>
</head>

<body>
  <form action="/home" method="POST">
    <div class="homeBar">
      <button class="homeBar" name="button">Home</button>
    </div>
  </form>
  <div class="buttonarray">
    <div class="userbutton" id="userbutton">
      <button onclick="user()" id="userbutton" type="button">User</button>
    </div>
    <div class="roombutton" id="userbutton">
      <button onclick="room()" id="roombutton" type="button">Room</button>
    </div>
  </div>
  <div class="user" id="user">
    <h2> Users </h2>
    <table>
      <tr>
        <th>username</th>
        <th>password</th>
        <th>email</th>
        <th>type</th>
      </tr>
      <% rows.forEach((r) =>{ %>
      <tr>
        <td><%=r.username%></td>
        <td><%=r.password%></td>
        <td><%=r.email%></td>
        <td><%=r.type%></td>
        <td>
          <form action="/admin/user/<%=r.id%>" method="POST"><input value="Delete" type="submit" id="deleteu"></form>
        </td>
        <% }); %>
      </tr>
    </table>
  </div>
  <div class="room" id="room">
    <h2>Users Data</h2>
    <table>
      <tr>
        <th>userid</th>
        <th>difficulty</th>
        <th>time</th>
        <th>score</th>
        <th>datetime</th>
        <!-- <th>person</th> -->
        <th>delete</th>
      </tr>
      <% rooms.forEach((t)=>{%>
      <tr>
        <td><%=t.userid%></td>
        <td><%=t.difficulty%></td>
        <td><%=t.time%></td>
        <td><%=t.score%></td>
        <td><%=t.datetime%></td>
        <!-- <td><%=t.person%> / 2</td> -->
        <td>
          <form action="/admin/rooms/<%=t.name%>" method="POST"><input type="submit" name="del" value="Delete" ,
              id="deleteu"></form>
        </td>
      </tr>
      <%});%>
    </table>
  </div>
</body>

</html>
